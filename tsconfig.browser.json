{
	"compilerOptions": {
		"jsx": "react-jsx",
		"strict": true,
		// "noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"target": "ES2022",
		"lib": ["ES2022", "dom"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"module": "ES2022",
		"baseUrl": "./src/",
		"paths": {
			"@asm-graphics/*": ["extension/*"],
			"@asm-graphics/types": ["types"],
			"@asm-graphics/types/*": ["types/*"]
		},
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["react", "node"]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"src/types/**/*.d.ts",
		"node_modules/@nodecg/types/augment-window.d.ts",
		"node_modules/vite-plugin-svgr/client.d.ts"
	]
}
