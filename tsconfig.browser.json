{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "noEmit": true,
        "isolatedModules": true,
        "noUnusedLocals": false,
        "paths": {
            "@asm-graphics/types/*": [
                "./src/types/*"
            ],
        },
        "types": [
            "react",
            "node"
        ]
    },
    "include": [
        "./src/dashboard/**/*",
        "./src/graphics/**/*",
        "./src/hooks/**/*",
        "./src/types/**/*",
        "node_modules/vite-plugin-svgr/client.d.ts"
    ],
    "exclude": [
        "./src/extensions/**/*"
    ]
}