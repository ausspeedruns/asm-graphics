{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"type": "string"
		},
		"obs": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false
				},
				"port": {
					"type": "number",
					"default": 4444
				},
				"ip": {
					"type": "string",
					"default": "localhost"
				},
				"password": {
					"type": "string"
				},
				"customTransitionsFolder": {
					"type": "string"
				}
			},
			"required": ["enabled"]
		},
		"twitch": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"parents": {
					"type": "array",
					"default": ["localhost"]
				},
				"clientId": {
					"type": "string",
					"default": ""
				}
			}
		},
		"tiltify": {
			"type": "object",
			"description": "Reads incentive data off the website",
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false
				},
				"key": {
					"type": "string",
					"default": ""
				},
				"id": {
					"type": "string",
					"default": ""
				},
				"campaign": {
					"type": "string",
					"default": ""
				}
			},
			"required": ["enabled", "key", "campaign", "id"]
		},
		"graphql": {
			"type": "object",
			"description": "Reads incentive data off the website",
			"properties": {
				"url": {
					"type": "string",
					"default": ""
				},
				"event": {
					"type": "string",
					"default": ""
				},
				"apiKey": {
					"type": "string",
					"default": ""
				}
			},
			"required": ["url"]
		},
		"x32": {
			"type": "object",
			"description": "Controls the Behringer X32 and gets audio information",
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false
				},
				"ip": {
					"type": "string",
					"default": ""
				}
			},
			"required": ["enabled", "ip"]
		}
	},
	"required": ["obs", "tiltify"]
}
