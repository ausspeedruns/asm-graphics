{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"lineWidth": 120,
		"lineEnding": "crlf",
		"bracketSameLine": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false
		},
		"includes": ["**", "!shared/dist/*", "!extension/*", "!graphics/*", "!dashboard/*"]
	},
	"javascript": {
		"formatter": {}
	},
	"html": {
		"formatter": {
			"selfCloseVoidElements": "always"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}
